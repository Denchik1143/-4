class Тварина:
    def __init__(self, вид, ім_я):
        self.вид = вид
        self.ім_я = ім_я

    def __str__(self):
        return f"{self.ім_я} - {self.вид}"


class Зоопарк:
    def __init__(self):
        self.тварини = []

    def додати_тварину(self, тварина):
        self.тварини.append(тварина)

    def вилучити_тварину(self, тварина):
        if тварина in self.тварини:
            self.тварини.remove(тварина)
            print(f"Тварина {тварина} була вилучена зі зоопарку.")
        else:
            print("Такої тварини немає у зоопарку.")

    def показати_тварини(self):
        print("Тварини у зоопарку:")
        for тварина in self.тварини:
            print(тварина)


зоопарк = Зоопарк()

тварина1 = Тварина("собака", "Рекс")
тварина2 = Тварина("кіт", "Мурка")

зоопарк.додати_тварину(тварина1)
зоопарк.додати_тварину(тварина2)

зоопарк.показати_тварини()

зоопарк.вилучити_тварину(тварина1)

зоопарк.показати_тварини()
